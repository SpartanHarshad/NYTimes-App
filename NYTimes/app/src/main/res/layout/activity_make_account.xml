<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".views.MakeAccountActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_chelt_medium"
        android:text="Let's make your account."
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_chelt_medium"
        android:text="It'll give you access to more in"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_chelt_medium"
        android:text="our app:"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/well"
        android:layout_width="25dp"
        android:layout_height="30dp"

        android:src="@drawable/ic_well"
        app:layout_constraintBottom_toBottomOf="@+id/wellText"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/wellText" />

    <ImageView
        android:id="@+id/Reader"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:src="@drawable/ic_reader_center"
        app:layout_constraintBottom_toBottomOf="@+id/livelyText"
        app:layout_constraintEnd_toEndOf="@+id/well"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/livelyText" />

    <ImageView
        android:id="@+id/Star"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/Reader"
        android:src="@drawable/ic_starfronticon"
        app:layout_constraintBottom_toBottomOf="@+id/FollowText"
        app:layout_constraintEnd_toStartOf="@+id/FollowText"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/FollowText" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />


    <Button
        android:id="@+id/btnFreeAccount"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="Create a free account"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline14" />

    <TextView
        android:id="@+id/btnNotNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Continue without an account"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFreeAccount"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/locktext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock more stories each month"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/wellText"
        app:layout_constraintStart_toEndOf="@+id/lock"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />

    <TextView
        android:id="@+id/FollowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/livelyText"
        android:layout_toEndOf="@+id/Reader"
        android:text="Follow your favorite topics"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/livelyText"
        app:layout_constraintTop_toBottomOf="@+id/livelyText" />

    <TextView
        android:id="@+id/livelyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wellText"
        android:layout_toEndOf="@+id/Reader"
        android:text="Engage in lively discussions"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/FollowText"
        app:layout_constraintStart_toStartOf="@+id/wellText"
        app:layout_constraintTop_toBottomOf="@+id/wellText" />

    <TextView
        android:id="@+id/wellText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read saved stories offline"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/livelyText"
        app:layout_constraintStart_toStartOf="@+id/locktext"
        app:layout_constraintTop_toBottomOf="@+id/locktext" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_illustration_of_lock_icon_53876_5832"
        app:layout_constraintBottom_toBottomOf="@+id/locktext"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/locktext" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="210dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35460994" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="105dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
